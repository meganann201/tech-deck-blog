<div class="col-3 d-flex flex-col flex-grow">
      <div class="card mb-3 shadow-sm">
        <div class="card-body">
          <div class="d-flex flex-column" style="height: 100%; max-height: 275px;">
            <div>
              <h5 class="card-title">{{title}}</h5>
              <p class="card-text text">By: {{user.username}} on {{format_date created_at}}</p>
            </div>
            <div class="card-post-description">
              <p class="card-text"> {{this.post_text}} </p>
            </div>
            <div class="text-center">
              <a href="/post/{{this.id}}" class="btn btn-primary">View More</a>
            </div>
          </div>
        </div>
      </div>
    </div>