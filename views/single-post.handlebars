<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8">
            <div class="shadow p-3 mb-5 bg-white rounded">
                <h3 class="text-center">{{post.title}}</h3>
                <p class="text text-center">by: {{post.user.username}} on {{format_date post.created_at}}</p>
                <p> {{post.post_text}} </p>
             </div>
        </div>
    </div>
</div>
  
  

{{#if loggedIn}}
 <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn-primary" onclick="handleAddComment({{post.id}})">add comment</button>
  </div>
{{/if}}
<div class="container">
{{#each post.comments}}
    {{> comments this}}
{{/each}}
</div>
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}