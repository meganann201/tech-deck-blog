<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form form-control">
    <div>
        <label for="post-title-input">Edit Blog Title</label>
      <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
      <label for="post-text-area">Edit Your Post Below</label>
      <textarea class="form-control" name="post-text" cols="30" rows="10"></textarea>
      
    </div>
    <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="btn-primary" type="submit">Save post</button>
    <button type="button" class="delete-post-btn btn-primary" onclick="handleDeletePost({{post.id}})">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

</form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>